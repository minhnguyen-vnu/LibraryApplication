                                          <VBox alignment="CENTER_LEFT" layoutX="21.0" layoutY="10.0" prefHeight="317.0" prefWidth="368.0" spacing="30.0" styleClass="DetailBook">
                                             <children>
                                                <Label fx:id="publication_date_lbl" styleClass="InfoText" text="Ngày công chiếu: 28 tháng 3 năm 2002">
