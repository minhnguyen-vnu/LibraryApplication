                                                      <Insets left="20.0" />
                                                   </VBox.margin>
                                                </Label>
                                                <Label fx:id="book_genres_lbl" styleClass="InfoText" text="Label">
                                                   <VBox.margin>
                                                      <Insets left="20.0" />
                                                   </VBox.margin>
                                                </Label>
